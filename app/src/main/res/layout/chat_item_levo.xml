<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/pslika"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pslika"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/modernsans"
            android:textAllCaps="false"
            android:text="Porukahfghfghfghfghfhffhfgh"
            android:textSize="16sp"
            android:textColor="#fff"
            android:padding="8dp"
            android:id="@+id/poruka"
            android:background="@drawable/poruka_levo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_seen"
            android:fontFamily="@font/modernsans"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:visibility="gone"
            android:layout_below="@id/poruka" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datumivreme"
            android:fontFamily="@font/modernsans"
            android:text="datum i vreme"
            android:textAllCaps="false"
            android:layout_below="@id/poruka"
            android:layout_alignParentLeft="true"
            android:padding="4dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>