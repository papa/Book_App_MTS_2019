<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/crno"
        android:textColor="@color/beloPolje"
        android:text="filtriraj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/izdavacCheckBox" />

    <CheckBox
        android:id="@+id/predmetCheckBox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/zuto"
        android:padding="7dp"
        android:text="predmet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cenaCheckBox" />

    <CheckBox
        android:id="@+id/izdavacCheckBox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/zuto"
        android:padding="7dp"
        android:text="izdavac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/predmetCheckBox" />

    <CheckBox
        android:id="@+id/cenaCheckBox"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/zuto"
        android:padding="7dp"
        android:text="cena do"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cenaFilterText"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="24dp"
        android:hint="Cena za filtriranje..."
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/cenaCheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cenaCheckBox"
        app:layout_constraintTop_toTopOf="@+id/cenaCheckBox" />

    <EditText
        android:id="@+id/predmetFilterText"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Predmet za filtriranje"
        app:layout_constraintBottom_toBottomOf="@+id/predmetCheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/predmetCheckBox"
        app:layout_constraintTop_toTopOf="@+id/predmetCheckBox" />

    <Spinner
        android:id="@+id/spIzdavac"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/izdavacCheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/izdavacCheckBox"
        app:layout_constraintTop_toTopOf="@+id/izdavacCheckBox" />
</androidx.constraintlayout.widget.ConstraintLayout>